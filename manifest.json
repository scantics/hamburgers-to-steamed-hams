{
	"manifest_version": 2,

	"name": "Hamburgers to Steamed Hams",
    "short_name": "Steamed Clams,
	"description": "Replaces the text 'Hamburgers' with 'Steamed Hams'. It's a regional dialect.",
	"author": "Seymour Skinner",
	"version": "2.0",

	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"all_frames": true,
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}
