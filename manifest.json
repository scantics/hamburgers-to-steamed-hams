{
	"manifest_version": 2,

	"name": "Hamburgers to Steamed Hams",
    "short_name": "Steamed Clams",
	"description": "Replaces the text 'Hamburgers' with 'Steamed Hams' to support regional dialect.",
	"author": "Seymour Skinner",
	"version": "2.0",

	"icons": {
		"16": "skinner16.png",
		"32": "skinner32.png",
		"48": "skinner48.png",
		"128": "skinner128.png"
	},

	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"all_frames": true,
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}
